#!/usr/bin/env bash

# Create a new nginx user if it doesn't exist
id -u nginx &>/dev/null || useradd -r nginx

# Stop the currently running nginx process
systemctl stop nginx

# Modify the nginx configuration to run as the nginx user
sed -i 's/user\s*nginx;/user nginx;/' /etc/nginx/nginx.conf

# Start nginx with the modified configuration
nginx -g "daemon off;"
